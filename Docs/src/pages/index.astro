---
import { Code } from 'astro/components'
import Layout from '../layouts/Base.astro';
import { baseUrl } from '../utils/baseUrl.js'; // Import the utility function

const CODE = `# Clone the repository
git clone https://github.com/JAlcocerT/phidata
# Navigate to the directory
cd ./phidata/Z_DeployMe
# Use The Bundled AI Apps with Docker
docker pull ghcr.io/jalcocert/phidata:yt-groq`
